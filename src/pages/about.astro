---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout title='Astro'>
	<Header />
	<div class="relative" x-data="sectorModal()">
		<div class="relative z-30">
			<img src="/img/leadership-image.webp" class="w-3/5 sm:w-3/4 md:w-2/3 lg:w-2/5 xl:w-[37%] h-44 sm:h-70 md:h-80 lg:h-100 xl:h-130 2xl:h-140 object-cover absolute top-0 left-1/2 -translate-x-1/2 lg:translate-x-0 lg:left-0 object-bottom rounded-b-full" alt="">
		</div>
		<div class="container relative z-30 pt-52 sm:pt-80 md:pt-90 lg:pt-24 xl:pt-30 pb-20 md:pb-24 xl:pb-48">
			<div class="w-[90%] sm:w-full lg:w-[90%] xl:w-[94%] 2xl:w-[90%] mx-auto flex flex-col lg:flex-row justify-between">
				<div class="text-center lg:text-left pb-10">
					<h1 class="text-2xl sm:text-3xl md:text-4xl lg:ext-5xl xl:text-6xl font-medium text-brand-dark-blue pb-3 md:pb-4">Leadership Team</h1>
					<p class="block lg:hidden font-light text-lg text-brand-dark-blue">Helping businesses shape not only their future, but also the future of the planet.</p>
				</div>
				<div class="lg:w-2/5">
					<ul class="border-t border-brand-gold flex flex-col">
						<li>
							<button type="button" @click="modalOpen = true; selectedSector = 'building'; imageError = false" class="flex justify-between gap-3 pr-1 items-center w-full border-brand-gold border-b py-5 md:py-6 hover:text-brand-gold btn">
									<div class="flex flex-col items-start font-medium text-lg md:text-xl lg:text-2xl">
										Pete Easby
									  <span class="font-light">Managing Director</span>
									</div>
									<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-brand-gold">
									<path fill-rule="evenodd" d="M16.72 7.72a.75.75 0 0 1 1.06 0l3.75 3.75a.75.75 0 0 1 0 1.06l-3.75 3.75a.75.75 0 1 1-1.06-1.06l2.47-2.47H3a.75.75 0 0 1 0-1.5h16.19l-2.47-2.47a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
								</svg>
							</button>
						</li>
						<li>
							<button type="button" @click="modalOpen = true; selectedSector = 'infrastructure'; imageError = false" class="flex justify-between gap-3 pr-1 items-center w-full border-brand-gold border-b py-5 md:py-6 hover:text-brand-gold btn">
								<div class="flex flex-col items-start font-medium text-lg md:text-xl lg:text-2xl">
									Cathy Harcourt
									<span class="font-light">Director</span>
								</div>
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-brand-gold">
									<path fill-rule="evenodd" d="M16.72 7.72a.75.75 0 0 1 1.06 0l3.75 3.75a.75.75 0 0 1 0 1.06l-3.75 3.75a.75.75 0 1 1-1.06-1.06l2.47-2.47H3a.75.75 0 0 1 0-1.5h16.19l-2.47-2.47a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
								</svg>
							</button>
						</li>
						<li>
							<button type="button" @click="modalOpen = true; selectedSector = 'environment'; imageError = false" class="flex justify-between gap-3 pr-1 items-center w-full border-brand-gold border-b py-5 md:py-6 hover:text-brand-gold btn">
								<div class="flex flex-col items-start font-medium text-lg md:text-xl lg:text-2xl">
									Luke Jarvis
									<span class="font-light">Director</span>
								</div>
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-brand-gold">
									<path fill-rule="evenodd" d="M16.72 7.72a.75.75 0 0 1 1.06 0l3.75 3.75a.75.75 0 0 1 0 1.06l-3.75 3.75a.75.75 0 1 1-1.06-1.06l2.47-2.47H3a.75.75 0 0 1 0-1.5h16.19l-2.47-2.47a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
								</svg>
							</button>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<!-- Modal -->
		<div
			x-show="modalOpen"
			x-effect="modalOpen ? document.body.style.overflow = 'hidden' : document.body.style.overflow = 'auto'"
			x-transition:enter="transition ease-out duration-500"
			x-transition:enter-start="translate-x-full opacity-0"
			x-transition:enter-end="translate-x-0 opacity-100"
			x-transition:leave="transition ease-in duration-400"
			x-transition:leave-start="translate-x-0 opacity-100"
			x-transition:leave-end="translate-x-full opacity-0"
			class="fixed inset-0 z-60"
			style="display: none;"
		>
		<!-- Backdrop -->
		<div
			@click="modalOpen = false"
			class="fixed inset-0 bg-black/50 z-50"
			x-transition:enter="transition ease-out duration-300"
			x-transition:enter-start="opacity-0"
			x-transition:enter-end="opacity-100"
			x-transition:leave="transition ease-in duration-300"
			x-transition:leave-start="opacity-100"
			x-transition:leave-end="opacity-0"
		></div>

		<!-- Modal Content -->
		<div class="absolute top-0 right-0 sm:w-[94%] h-full z-60 overflow-y-auto">
			<img
				x-show="sectors[selectedSector]?.image && !imageError"
				:src="`/img/${sectors[selectedSector]?.image}`"
				@error="imageError = true"
				@load="imageError = false"
				class="w-2/3 sm:w-[45%] md:w-2/5 lg:w-[35%] xl:w-2/5 2xl:w-[30%] h-56 sm:h-64 md:h-70 lg:h-110 xl:h-130 object-cover absolute top-0 right-16 md:right-20 lg:right-24 xl:right-36 z-20 object-bottom rounded-b-full z-40"
				alt="">
			<div class="relative bg-[#3FD0CC]">
				<button
					type="button"
					@click="modalOpen = false"
					class="absolute top-4 right-4 md:top-6 md:right-6 text-black z-50 p-2 hover:bg-white/10 rounded-lg transition-colors touch-manipulation"
					aria-label="Close modal">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8 md:size-10">
						<path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
					</svg>
				</button>
				<div
					class="container relative z-30"
					:class="sectors[selectedSector]?.image && !imageError ? 'pt-64 sm:pt-40 pb-10 sm:pb-12 lg:py-28 xl:py-36' : 'py-16 md:py-20 lg:py-28 xl:py-36'">
					<h3 class="text-3xl md:text-4xl font-semibold pb-5" x-text="sectors[selectedSector]?.title"></h3>
					<p class="text-xl md:text-2xl font-light" x-text="sectors[selectedSector]?.role"></p>
					<a href="/" class="text-xl md:text-2xl font-light" x-text="sectors[selectedSector]?.email"></a>
				</div>
			</div>
			<div class="relative z-20 bg-white shadow-lg">
				<div class="container pt-4 lg:pt-12 xl:pt-20 pb-6 lg:pb-10 xl:pb-20">
					<!-- Dynamic Content -->
					<div x-show="sectors[selectedSector]" class="lg:pr-6 xl:pr-12 2xl:pr-16 flex flex-col-reverse lg:flex-row gap-0 lg:gap-20 2xl:gap-24 prose max-w-full prose-p:font-light prose-p:leading-7 sm:prose-p:leading-9 prose-p:text-lg sm:prose-p:text-xl xl:prose-p:text-2xl prose-headings:font-heading prose-h3:text-xl sm:prose-h3:text-2xl xl:prose-h3:text-3xl prose-headings:text-brand-gold prose-headings:font-normal prose-h3:leading-8 sm:prose-h3:leading-10 xl:prose-h3:leading-12">
						<div class="lg:w-3/5 2xl:w-2/3">
							<template x-for="(paragraph, index) in sectors[selectedSector]?.paragraphs || []" :key="index">
								<p x-html="paragraph"></p>
							</template>
						</div>
						<div class="lg:w-2/5 2xl:w-1/3 lg:pt-16 xl:pt-20">
							<h3 x-text="sectors[selectedSector]?.quote"></h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>

	<div class="relative min-h-48 sm:min-h-70 md:min-h-100 lg:min-h-110 xl:min-h-150 flex items-center justify-center">
		<img src="/img/shape-white.webp" class="absolute -top-px inset-x-0 w-full object-cover object-bottom h-auto z-30" alt="">
		<img src="/img/equality-diversity-and-inclution.webp" class="absolute inset-0 w-full h-full object-cover" alt="">
		<div class="absolute z-20 bg-brand-dark-blue/50 inset-0"></div>
		<img src="/img/shape-blue.webp" class="absolute -bottom-px inset-x-0 w-full object-cover object-top h-auto z-30 rotate-180" alt="">
		<div class="container relative z-40">
			<h2 class=" hidden md:block md:text-4xl font-medium text-white text-center">Equality, Diversity & Inclusion</h2>
		</div>
	</div>

	<div class="bg-brand-dark-blue relative">
		<div class="hidden lg:block absolute bottom-0 inset-x-0 w-full z-20 h-1/2 xl:h-2/3 bg-[linear-gradient(0deg,rgba(63,208,204,0.35)_0%,rgba(63,208,204,0)_100%)]"></div>

		<div class="w-[90%] sm:w-full lg:w-[90%] xl:w-[94%] 2xl:w-[90%] mx-auto relative z-20">
			<div class="container pb-20 lg:pb-40 xl:pb-60 pt-5 lg:pt-10">
					<div class="prose max-w-full prose-p:font-light prose-p:leading-6 sm:prose-p:leading-8 sm:prose-p:text-lg sm:prose-p:text-xl prose-h2:text-lg sm:prose-h2:text-xl md:prose-h2:text-2xl xl:prose-h2:text-3xl prose-headings:text-brand-gold prose-h3:text-2xl prose-h3:text-white prose-headings:font-medium prose-h2:leading-7 sm:prose-h2:leading-8 md:prose-h2:leading-10 prose-h2:mb-0 prose-h3:mt-0 text-center lg:text-left sm:prose-h3:text-3xl text-white">
					<div class="lg:columns-2">
						<h3 class="block md:hidden pb-4 sm:pb-5">Equality, Diversity & Inclusion</h3>
						<p><b>At Harcourt Michaels, we have an important role to play in helping our clients build diverse leadership teams.</b></p>
						<p>We are committed to promoting equality and diversity and promoting a culture that actively values difference and recognises that people from different backgrounds and experiences can bring valuable insights to the workplace and enhance the way we work.</p>
						<p>We take practical steps to make this happen. In every search, we look beyond the obvious networks. We actively seek out candidates from a wide range of backgrounds and make sure our shortlists reflect that. </p>
						<p>We also share insights with our clients throughout the process, helping them make confident, inclusive choices. We want everyone we work with to feel respected, heard and valued. </p>
					</div>
					<div class="xl:w-4/5">
						<h2>When leadership reflects the world around us, organisations thrive</h2>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="relative">
		<div class="relative z-30">
			<img src="/img/sustainability-image.webp" class="w-3/5 sm:w-3/4 md:w-2/3 lg:w-1/2 h-44 sm:h-70 md:h-80 lg:h-100 xl:h-130 2xl:h-140 object-cover absolute top-0 left-1/2 -translate-x-1/2 lg:translate-x-0 lg:left-0 object-bottom rounded-b-full" alt="">
			<div class="bg-brand-dark-blue/50 z-20 w-3/5 sm:w-3/4 md:w-2/3 lg:w-1/2 h-44 sm:h-70 md:h-80 lg:h-100 xl:h-130 2xl:h-140 object-cover absolute top-0 left-1/2 -translate-x-1/2 lg:translate-x-0 lg:left-0 rounded-b-full"></div>
			<div class="w-full sm:w-4/5 md:w-2/3 lg:w-1/2 text-center text-white relative z-30 lg:absolute left-0 top-8 lg:top-20 xl:top-26">
				<div class="w-4/5 sm:w-1/2 md:w-2/5 lg:w-2/3 2xl:w-3/5 mx-auto hidden lg:block">
					<h2 class="text-2xl sm:text-3xl md:text-4xl font-medium pb-5 md:pb-7">Sustainability</h2>
					<p class="font-light text-lg sm:text-xl lg:text-2xl xl:text-3xl">Sustainability is part of how we think about leadership and the future.</p>
				</div>
			</div>
		</div>
		<div class="container relative z-20 pt-44 sm:pt-68 pb-10 sm:pb-14 md:pt-80 lg:pt-20 lg:pb-20 xl:py-32">
			<div class="w-full lg:w-[90%] xl:w-[94%] 2xl:w-[90%] mx-auto">
				<div class="prose max-w-full prose-p:font-light prose-p:leading-6 sm:prose-p:leading-8 sm:prose-p:text-lg sm:prose-p:text-xl prose-h2:text-lg sm:prose-h2:text-xl md:prose-h2:text-2xl xl:prose-h2:text-3xl prose-headings:text-brand-gold prose-headings:font-medium prose-h2:leading-7 sm:prose-h2:leading-8 md:prose-h2:leading-10 prose-h3:mb-0 prose-h4:text-brand-dark-blue prose-h4:text-lg sm:prose-h4:text-xl md:prose-h4:text-2xl prose-h4:font-light text-center lg:text-left prose-h3:text-3xl prose-h3:text-brand-dark-blue">
					<div class="lg:w-[45%] xl:w-2/5 ml-auto">
						<h3 class="block lg:hidden pb-4 sm:pb-5">Sustainability</h3>
						<h4 class="pb-4 block lg:hidden">Sustainability is part of how we think about leadership and the future.</h4>
						<p>We work with senior leaders across the built environment—people shaping cities, infrastructure, and communities. More and more, they're asking how to lead in ways that respect the planet and the people on it. We're proud to support that shift.</p>
						<p>In our search assignments, we look for candidates who understand the importance of sustainable thinking—whether that's low-carbon design, circular construction, or long-term planning. We help our clients build leadership teams that take responsibility for the impact they make.</p>
						<p>We have calculated our current carbon footprint and have created science-based carbon targets for reducing our carbon emissions. We are committed to reducing our environmental footprint, promoting sustainable resource use, and partnering with suppliers who share our values.</p>
					</div>
					<div class="xl:w-4/5 xl:pt-5">
						<h2>We help build leadership teams that lead with vision, responsibility, and respect for the planet.</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
	<Footer />
</Layout>

<script is:inline>
	function sectorModal() {
		return {
			modalOpen: false,
			selectedSector: '',
			imageError: false,
			sectors: {
				building: {
					title: 'Pete Easby',
					role: 'Managing Director',
					email: 'peteh@harcourtmichaels.com',
					image: 'cathy-image.webp',
					paragraphs: [
						'<strong>Cathy brings over 25 years of executive search expertise, with two decades dedicated to shaping leadership in the built environment. Known for her tenacious, hands-on approach, she partners with boards and senior teams to deliver strategic appointments that drive long-term impact.</strong>',
						"Her deep expertise in research and strategy means she stays close to every brief, combining sector insight with up-to-date search tools to identify high-calibre candidates. Many of her assignments form part of long-term partnerships, where she works across multiple projects to support evolving leadership needs.",
						"Recent assignments at Harcourt Michaels include senior hires in energy, sustainability, transport planning, project management, cost consulting, marketing, finance, and advisory."
					],
					quote: "Search takes persistence, insight, and a genuine curiosity about people. That's how we find the decision-makers who really make a difference."
				},
				infrastructure: {
					title: 'Cathy Harcourt',
					role: 'Director',
					email: 'cathyh@harcourtmichaels.com',
					image: 'cathy-image.webp',
					paragraphs: [
						'<strong>Cathy brings over 25 years of executive search expertise, with two decades dedicated to shaping leadership in the built environment. Known for her tenacious, hands-on approach, she partners with boards and senior teams to deliver strategic appointments that drive long-term impact.</strong>',
						"Her deep expertise in research and strategy means she stays close to every brief, combining sector insight with up-to-date search tools to identify high-calibre candidates. Many of her assignments form part of long-term partnerships, where she works across multiple projects to support evolving leadership needs.",
						"Recent assignments at Harcourt Michaels include senior hires in energy, sustainability, transport planning, project management, cost consulting, marketing, finance, and advisory."
					],
					quote: "Search takes persistence, insight, and a genuine curiosity about people. That's how we find the decision-makers who really make a difference."
				},
				environment: {
					title: 'Luke Jarvis',
					role: 'Director',
					email: 'lukeh@harcourtmichaels.com',
					image: 'cathy-image.webp',
					paragraphs: [
						'<strong>Cathy brings over 25 years of executive search expertise, with two decades dedicated to shaping leadership in the built environment. Known for her tenacious, hands-on approach, she partners with boards and senior teams to deliver strategic appointments that drive long-term impact.</strong>',
						"Her deep expertise in research and strategy means she stays close to every brief, combining sector insight with up-to-date search tools to identify high-calibre candidates. Many of her assignments form part of long-term partnerships, where she works across multiple projects to support evolving leadership needs.",
						"Recent assignments at Harcourt Michaels include senior hires in energy, sustainability, transport planning, project management, cost consulting, marketing, finance, and advisory."
